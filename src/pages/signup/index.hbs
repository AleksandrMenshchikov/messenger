<main class='container'>
  <div class='wrapper'>
    <h1 class='title'>Регистрация</h1>
    <form class='form' novalidate>
      <div class='group'>
        {{{ input-email }}}
        {{{ input-error-email }}}
        <label class='label'>Почта</label>
      </div>
      <div class='group'>
        {{{ input-login }}}
        {{{ input-error-login }}}
        <label class='label'>Логин</label>
      </div>
      <div class='group'>
        {{{ input-first-name }}}
        {{{ input-error-first-name }}}
        <label class='label'>Имя</label>
      </div>
      <div class='group'>
        {{{ input-second-name }}}
        {{{ input-error-second-name }}}
        <label class='label'>Фамилия</label>
      </div>
      <div class='group'>
        <input class='input' type='tel' name='phone' placeholder='placeholder' autocomplete='tel' required />
        <label class='label'>Телефон</label>
        <span class='error'>Информация об ошибке</span>
      </div>
      <div class='group'>
        <input class='input' type='password' name='password' placeholder='placeholder' autocomplete='off' required />
        <label class='label'>Пароль</label>
        <span class='error'>Информация об ошибке</span>
      </div>
      <div class='group'>
        <input class='input' type='password' name='password' placeholder='placeholder' autocomplete='off' required />
        <label class='label'>Пароль (ещё раз)</label>
        <span class='error'>Информация об ошибке</span>
      </div>
      <button class='button-submit' type='submit'>Зарегистрироваться</button>
      <a class='link' href='../login/index.hbs'>Войти</a>
    </form>
  </div>
</main>