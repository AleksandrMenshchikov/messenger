<ul class="list">
  {{#each data}}
  <li class="list__item">
    <span class="list__divider"></span>
    <div class="list__item-inner">
      <img class="list__item-avatar"
        onerror="this.src='https://www.lightsong.net/wp-content/uploads/2020/12/blank-profile-circle.png'"
        src={{this.avatar}} alt="Аватар" />
      <div class="list__item-text">
        <p class="list__item-title">{{this.title}}</p>
        <p class="list__item-subtitle">
          <span class="list__item-subtitle-you">Вы: </span>
          <span class="list__item-subtitle-text">{{this.last_message}}</span>
        </p>
      </div>
      <div class="list__item-time-counter">
        <span class="list__item-time">12:00</span>
        <span class="list__item-counter">{{this.unread_count}}</span>
      </div>
    </div>
  </li>
  {{/each}}
  <span class="list__divider"></span>
</ul>
