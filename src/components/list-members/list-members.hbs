<ul class="list">
  {{#each data}}
  <li class="list__item">
    <span class="list__divider"></span>
    <div class="list__item-inner">
      <img class="list__item-avatar" src="https://www.lightsong.net/wp-content/uploads/2020/12/blank-profile-circle.png"
        alt="Аватар" />
      <div class="list__item-text">
        <p class="list__item-title">{{this.name}}</p>
        <p class="list__item-subtitle">
          <span class="list__item-subtitle-you">Вы: </span>
          <span class="list__item-subtitle-text">{{this.text}}</span>
        </p>
      </div>
      <div class="list__item-time-counter">
        <span class="list__item-time">12:00</span>
        <span class="list__item-counter">99+</span>
      </div>
    </div>
  </li>
  {{/each}}
  <span class="list__divider"></span>
</ul>
